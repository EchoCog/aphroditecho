{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://echo.cog/contracts/agent.schema.json",
  "title": "AgentSpec",
  "type": "object",
  "required": ["id", "version", "capabilities", "tools_allow", "policies", "prompt_profile"],
  "properties": {
    "id": {"type": "string", "pattern": "^[a-zA-Z0-9_.-]{3,64}$"},
  "version": {"type": "string", "pattern": "^v?\\d+\\.\\d+\\.\\d+$"},
    "capabilities": {"type": "array", "items": {"type": "string"}},
    "tools_allow": {"type": "array", "items": {"type": "string"}},
    "policies": {"type": "array", "items": {"type": "string"}},
    "prompt_profile": {"type": "string"},
    "metadata": {"type": "object", "additionalProperties": true}
  },
  "additionalProperties": false
}
